<div class="chat-container">

  <!-- HEADER -->
  <div class="header">
    <div class="brand">
      <div class="logo">IF</div>
      <div class="brand-text">
        <span>IdeaForge AI</span>
        <small>Turn ideas into startups</small>
      </div>
    </div>
  </div>

  <!-- QUICK INDUSTRY BUTTONS -->
  <div class="quick-options">
    <button onclick="quickSend('AI startup')">AI</button>
    <button onclick="quickSend('Fitness app')">Fitness</button>
    <button onclick="quickSend('Finance startup')">Finance</button>
    <button onclick="quickSend('Education platform')">Education</button>
    <button onclick="quickSend('Gaming startup')">Gaming</button>
    <button onclick="quickSend('Healthcare idea')">Healthcare</button>
    <button onclick="quickSend('Ecommerce tool')">Ecommerce</button>
  </div>

  <!-- CHAT -->
  <div class="messages" id="messages"></div>

  <div class="feedback" id="feedback">
    <button onclick="rateIdea(true)">Good Idea</button>
    <button onclick="rateIdea(false)">Bad Idea</button>
  </div>

  <!-- INPUT -->
  <div class="input-area">
    <input id="input" placeholder="Say hi or describe a problem..." />
    <button class="send-btn" onclick="sendMessage()">Send</button>
  </div>
</div>

<script>
const messages = document.getElementById("messages");
const input = document.getElementById("input");
const feedback = document.getElementById("feedback");

function addMessage(text, sender) {
  const div = document.createElement("div");
  div.className = "message " + sender;
  div.innerText = text;
  messages.appendChild(div);
  messages.scrollTop = messages.scrollHeight;
}

function quickSend(text) {
  input.value = text;
  sendMessage();
}

function generateReply(text) {
  text = text.toLowerCase();

  if (["hi","hello","hey"].includes(text))
    return "Hey ðŸ‘‹ I can help you generate startup ideas and monetization plans.";

  if (text.includes("ai"))
    return "Industry: AI\n\nStartup Idea:\nAn AI assistant that automates internal workflows for small teams.\n\nMonetization:\n1. Usage-based pricing\n2. Team subscriptions\n3. Enterprise plans";

  if (text.includes("fitness"))
    return "Industry: FITNESS\n\nStartup Idea:\nA smart fitness app that adjusts workouts based on energy levels.\n\nMonetization:\n1. Monthly subscriptions\n2. Coaching add-ons\n3. Brand partnerships";

  if (text.includes("finance"))
    return "Industry: FINANCE\n\nStartup Idea:\nA predictive budgeting app that warns users before overspending.\n\nMonetization:\n1. Premium features\n2. Bank partnerships\n3. Referral commissions";

  return "Tell me an industry or problem and I will generate a startup idea with monetization.";
}

function sendMessage() {
  const text = input.value;
  if (!text.trim()) return;
  addMessage(text, "user");
  input.value = "";
  addMessage(generateReply(text), "bot");
  feedback.style.display = "flex";
}

function rateIdea(isGood) {
  addMessage(isGood ? "Noted. I will suggest more ideas like this." : "Got it. I will improve.", "bot");
  feedback.style.display = "none";
}

input.addEventListener("keydown", e => {
  if (e.key === "Enter") sendMessage();
});
</script>

</body>
